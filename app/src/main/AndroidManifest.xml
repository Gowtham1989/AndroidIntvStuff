<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidintvstuff">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AndroidComponent"></activity>
        <activity android:name=".activities.Activity_A"
            android:configChanges="orientation|keyboardHidden|screenSize"></activity>
        <activity android:name=".activities.Activity_B"></activity>
        <activity android:name=".activities.Fragment_Activity"></activity>
        <activity android:name=".activities.HandlerActivity"></activity>
        <activity android:name=".services.TypesOfservices"></activity>
        <service android:name=".services.StartServiceDemo"></service>
        <service android:name=".services.BoundServiceDemo"></service>
    </application>

</manifest>
